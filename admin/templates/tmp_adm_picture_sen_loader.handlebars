<div class='row'>
    <div class='col-lg-12'>
        <section class='panel'>
            <header class='panel-heading'>
                <span class='tools pull-right'>
                    <a href='javascript:;' class='fa fa-chevron-down'></a>
                </span>
                <h4>
                    Cargue sus Imágenes
                </h4>
            </header>
            <div class='panel-body'>

                <div class='form'>
                    <div class='form-inline col-sm-12 col-md-12'>
                        <div class='row'>
                            <div class='col-sm-6 col-md-6'></div>
                            <div class='col-sm-12 col-md-12'>
                                <div class='form-group col-sm-12 col-md-12' style='margin-top: 10px;'>

                                    
                                    <span class='btn btn-success fileinput-button'  style='background-color: #5cb85c'>
                                        <i class='glyphicon glyphicon-plus'></i>
                                        <span>Seleccione Imágenes</span>
                                        <!-- The file input field used as target for the file upload widget -->
                                        <input id='fileupload' type='file' name='files[]' multiple>
                                    </span>
                                    <br>
                                    <br>

                                    <!-- The global progress bar -->
                                    <div id='progress' class='progress'>
                                        <div class='progress-bar progress-bar-success'></div>
                                    </div>

                                    <!-- The container for the uploaded files -->
                                    <div id='files' class='files'></div>


                                </div>
                            </div>
                            <div class='col-sm-3 col-md-3'></div>
                            <div class='clearfix'></div>
                        </div>
                    </div>
                </div>

                <div id='progress'>
                    <div class='bar' style='width: 0%;'></div>
                </div>

            </div>
        </section>
    </div>
</div>